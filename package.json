{
  "name": "sticky-server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "server": "node ./dist/bin/www.js",
    "transpile": "babel ./server --out-dir dist",
    "build": "npm-run-all clean transpile",
    "watch:dev": "nodemon",
    "clean": "rimraf dist",
    "dev": "NODE_ENV=development npm-run-all build server",
    "proxy": "http://localhost:8080",
    "sass": "node-sass webapp/src/styles/main.scss --output webapp/public",
    "client": "cd webapp && npm start",
    "prod": "concurrently -n 'server,client' -c 'blue,green' \"node ./dist/bin/www.js\" \"npm run client\""
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.tests.js",
      "*.spec.js"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "bcrypt": "^5.0.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "mongoose": "^5.10.15",
    "morgan": "~1.9.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "nodemon": "^2.0.6"
  },
  "optionalDependencies": {
    "win-node-env": "^0.4.0"
  }
}
